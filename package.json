{
  "name": "backend",
  "version": "1.0.0",
  "description": "AI Research Paper Summarizer Server",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "npm run clean && npm run typecheck && npm run lint && tsc",
    "build:prod": "NODE_ENV=production npm run build",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "postbuild": "npm run test:ci",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "validate": "npm run typecheck && npm run lint && npm run test:ci",
    "docker:build": "docker build -t summarizer-server .",
    "docker:run": "docker run -p 3001:3001 --env-file .env summarizer-server",
    "health": "curl -f http://localhost:3001/health || exit 1"
  },
  "keywords": [
    "ai",
    "summarizer",
    "research",
    "papers",
    "typescript",
    "express",
    "node",
    "openrouter",
    "deepseek"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/pg": "^8.15.5",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "file-type": "^18.7.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.6.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pdf-parse": "^1.1.1",
    "pg": "^8.16.3",
    "xlsx": "^0.18.5",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/compression": "^1.7.4",
    "@types/cookie-parser": "^1.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.6",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/morgan": "^1.9.7",
    "@types/multer": "^1.4.8",
    "@types/node": "^20.8.7",
    "@types/passport": "^1.0.14",
    "@types/passport-google-oauth20": "^2.0.13",
    "@types/passport-jwt": "^3.0.11",
    "@types/pdf-parse": "^1.1.4",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
